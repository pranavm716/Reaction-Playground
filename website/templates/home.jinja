{% extends "base.jinja" %}
{% block content %}
    <style>
        .btn-icon {
            display: flex;
            align-items: center;
        }

        .btn-icon .material-icons {
            padding-right: 5px;
        }
    </style>
    <form method="POST">
        <div class="form-group">
            <label for="start_mol_smiles">Start Molecule SMILES</label>
            <input type="text"
                   class="form-control"
                   id="start_mol_smiles"
                   name="start_mol_smiles"
                   placeholder="Enter SMILES" />
        </div>
        <div>
            <button type="button" class="btn btn-success btn-icon" id="addTargetButton">
                <span class="material-icons">add</span>
                Add Target (optional)
            </button>
        </div>
        <div class="form-group" style="display:none;" id="targetMolInput">
            <label for="target_mol_smiles">Target Molecule SMILES</label>
            <input type="text"
                   class="form-control"
                   id="target_mol_smiles"
                   name="target_mol_smiles"
                   placeholder="Enter SMILES" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary" id="submitButton">Run reactions</button>
        <script>
            const btn = document.getElementById("addTargetButton");
            btn.addEventListener("click", () => {
            btn.style.display = "none";
            document.getElementById('targetMolInput').style.display = "block";
            document.getElementById('submitButton').textContent = "Find synthetic pathway";
        });
        </script>
    </form>
{% endblock %}
